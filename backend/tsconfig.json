{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./build",
        "rootDir": "src",
        "target": "ES2017",
        "skipLibCheck": true,
        "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}